# -*- mode: ruby -*-
# vi: set ft=ruby :

$bootstrap_centos7 = <<-EOF
#!/bin/bash
set -e

sudo mv /etc/yum.repos.d/CentOS-Base.repo /etc/yum.repos.d/CentOS-Base
sudo mv /etc/yum.repos.d/CentOS-Vault.repo /etc/yum.repos.d/CentOS-Vault
sudo cp /tmp/CentOS-Vault.repo /etc/yum.repos.d

sudo yum install -y git python3
python3 -m pip install --user --upgrade pip
python3 -m pip install --user ansible==4.5.0

sudo sed -i s/SELINUX=enforcing/SELINUX=disabled/ /etc/selinux/config

# sudo yum -y update

sudo yum-config-manager --save --disable \*
sudo cp /tmp/CentOS-Vault.repo /etc/yum.repos.d

echo Rebooting...
sudo shutdown -r now
EOF

Vagrant.configure("2") do |config|
  config.vm.box_check_update = false
  config.ssh.insert_key = false

  config.vm.define "dlserver1", primary: true, autostart: true do |x|
    config.vm.box = "centos/7"
    x.vm.network "forwarded_port", guest: 22, host: 2230 # must match ansible_port in inventory
    x.vm.network "forwarded_port", guest: 80, host: 8090 # must match test_port in inventory
    x.vm.provider :virtualbox do |vb|
      vb.memory = 3 * 1024
    end
    x.vm.synced_folder "..", "/vagrant"
    x.vm.provision "file", source: "CentOS-Vault.repo", destination:"/tmp/CentOS-Vault.repo"
    x.vm.provision "shell", privileged: false, inline: $bootstrap_centos7
  end

end
